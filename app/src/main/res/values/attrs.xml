<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="button_icon" format="reference" />
    <attr name="button_icon_tint" format="color" />

    <declare-styleable name="CustomToggleButton">
        <attr name="toggle_background" format="reference" />
        <attr name="selected_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="HaruSekkiBaseToolbar">
        <attr name="toolbar_text" format="string" />
        <attr name="toolbar_text_color" format="color" />
        <attr name="toolbar_icon" format="reference" />
        <attr name="toolbar_icon_tint" format="color" />
        <attr name="toolbar_background" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="HaruSekkiToolbarButton">
        <attr name="button_text_enabled" format="boolean" />
        <attr name="button_text" format="string" />
        <attr name="button_text_color" format="color" />
        <attr name="button_icon" />
        <attr name="button_icon_tint" />
    </declare-styleable>

    <declare-styleable name="CustomButtonWithEditText">
        <attr name="button_icon" />
        <attr name="button_icon_tint" />
        <attr name="edit_text_color" format="color" />
    </declare-styleable>
</resources>