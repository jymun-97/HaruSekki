<resources>
    <!-- Base application theme. -->
    <style name="Theme.HaruSekki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_signature</item>
        <item name="colorPrimaryVariant">@color/app_signature_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_signature</item>
        <item name="colorSecondaryVariant">@color/app_signature_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TextInputLayout.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_signature_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/app_signature_bright</item>
    </style>

    <style name="SearchModeToggleButtons">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">3dp</item>
        <item name="toggle_background">@drawable/shape_gray_oval_rectangle</item>
        <item name="selected_background">@drawable/shape_gray_filled_oval_rectangle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>