<resources>
    <!-- Base application theme. -->
    <style name="Theme.HaruSekki" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_signature</item>
        <item name="colorPrimaryVariant">@color/app_signature_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_signature</item>
        <item name="colorSecondaryVariant">@color/app_signature_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TextInputLayout.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/app_signature_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/app_signature_bright</item>
    </style>
</resources>