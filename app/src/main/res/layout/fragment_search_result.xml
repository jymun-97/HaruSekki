<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.jymun.harusekki.ui.search_result.SearchMode" />

        <variable
            name="viewModel"
            type="com.jymun.harusekki.ui.search_result.SearchResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/app_signature"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp">

                <ImageView
                    android:id="@+id/appNameImageView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_app_name"
                    app:layout_constraintBottom_toBottomOf="@id/appNameTextView"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/appNameTextView"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/appNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/appNameImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/refreshImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_refresh"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.Toolbar>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:elevation="0dp">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:scrollbars="none">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/sortOptionSpinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_spinner_closed"
                            android:spinnerMode="dropdown"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ToggleButton
                            android:id="@+id/byTitleModeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_toggle_button"
                            android:paddingHorizontal="12dp"
                            android:textOff="직접 레시피 검색"
                            android:textOn="검색어 : 테스트"
                            app:layout_constraintBottom_toBottomOf="@+id/sortOptionSpinner"
                            app:layout_constraintStart_toEndOf="@id/sortOptionSpinner"
                            app:layout_constraintTop_toTopOf="@+id/sortOptionSpinner" />

                        <ToggleButton
                            android:id="@+id/byIngredientModeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_toggle_button"
                            android:paddingHorizontal="12dp"
                            android:textOff="나의 냉장고 속 재료로 검색"
                            android:textOn="나의 냉장고 속 재료로 검색"
                            app:layout_constraintBottom_toBottomOf="@+id/sortOptionSpinner"
                            app:layout_constraintStart_toEndOf="@id/byTitleModeButton"
                            app:layout_constraintTop_toTopOf="@+id/sortOptionSpinner" />

                        <ToggleButton
                            android:id="@+id/favoriteModeButton"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/background_toggle_button"
                            android:paddingHorizontal="12dp"
                            android:textOff="내가 좋아한 레시피"
                            android:textOn="내가 좋아한 레시피"
                            app:layout_constraintBottom_toBottomOf="@+id/sortOptionSpinner"
                            app:layout_constraintStart_toEndOf="@id/byIngredientModeButton"
                            app:layout_constraintTop_toTopOf="@+id/sortOptionSpinner" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </HorizontalScrollView>

            </com.google.android.material.appbar.AppBarLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/app_signature_dark"
            android:progressTint="@color/app_signature_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>